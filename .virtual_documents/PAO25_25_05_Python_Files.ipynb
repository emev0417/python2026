def buscar_en_fichero(ruta, cadena):
    try:
        with open(ruta, 'r') as fichero: # 'r' es para lectura 
            contenido = fichero.read()
            if cadena in contenido:
                return True
            else:
                return False
    except FileNotFoundError:
        return "El archivo no existe"

#Ejemplo de uso:
print(buscar_en_fichero("res/multiple_lines.txt", "Hola"))





import os

def escribir_n_elementos(lista, ruta_destino, n):
    # Controlamos el rango de n 
    if n > len(lista):
        n = len(lista)
    elif n < 0:
        n = 0
        
    elementos_a_guardar = lista[:n] # Tomamos los primeros n [cite: 468]
    
    with open(ruta_destino, 'w') as fichero: # Creamos el fichero [cite: 467]
        for elemento in elementos_a_guardar:
            fichero.write(str(elemento) + '\n')
    
    print(f"Se han escrito {n} elementos en {ruta_destino}")

# Ejemplo de uso:
mi_lista = ["IA", "Python", "Ficheros", "Datos"]
escribir_n_elementos(mi_lista, "resultado.txt", 2)





def frecuencia_palabras(ruta):
    try:
        with open(ruta, 'r') as fichero:
            contenido = fichero.read().lower() # Convertimos a minúsculas
            palabras = contenido.split() # Dividimos por espacios 
            
            frecuencia = {}
            for p in palabras:
                if p in frecuencia:
                    frecuencia[p] += 1 # Si ya existe, sumamos 1
                else:
                    frecuencia[p] = 1 # Si es nueva, empezamos en 1
            
            return frecuencia # Devolvemos el diccionario [cite: 470]
    except FileNotFoundError:
        return {}

#Ejemplo:
print(frecuencia_palabras("res/multiple_lines.txt"))



